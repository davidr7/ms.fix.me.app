<h1>Listing variants</h1>

<table>
  <tr>
    <th alling="left">Sku</th>
    <th alling="left">Product</th>
    <th alling="left">Price</th>
    <th alling="left">Price Range</th>
    <th alling="left">Weight in grams</th>
    <th alling="left">Description</th>
    <th alling="left">Bay</th>
    <th alling="left">Stock level total</th>
    <th alling="left">Stock level reserved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @variants.each do |variant| %>
  <tr>
    <td><%= variant.sku %></td>
    <td><%= variant.product_id %></td>
    <td><%= variant.price %></td>
    <td><%= variant.min_variant_price(variant) %> - <%= variant.max_variant_price(variant) %></td>
    <td><%= variant.weight_in_grams %></td>
    <td><%= variant.description %></td>
    <td><%= variant.bay %></td>
    <td><%= variant.stock_level_total %></td>
    <td><%= variant.stock_level_reserved %></td>
    <td><%= link_to 'Show', administration_variant_path(variant) %></td>
    <td><%= link_to 'Edit', edit_administration_variant_path(variant) %></td>
    <td><%= link_to 'Destroy', administration_variant_path(variant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

